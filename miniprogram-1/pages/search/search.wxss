/* pages/search/search.wxss */
page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
}
.search_row input {
  background-color: #fff;
  flex: 1;
  height: 100%;
  padding-left: 30rpx;
}
.search_row button {
  width: 130rpx !important;
  height: 100%;
  padding: 0;
  margin: 0 10rpx;
  margin-left: 10rpx !important;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.search_content {
  margin-top: 30rpx;
}
.search_content .search_item {
  background-color: #fff;
  height: 200rpx;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}


.tips{
  margin-top: 100rpx;
}