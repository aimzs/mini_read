/* pages/goods_list/goods_list.wxss */

 .goods_item{
 padding-top: 10rpx 0;
 display: flex;
 border-bottom: 1px solid rgb(230, 224, 224);
}
.goods_item .goods_img_wrap{
flex: 2;
display: flex;
padding: 10rpx;
justify-content: center;
align-items: center;
}
.goods_img_wrap image{
width: 70%;
}

.goods_item .goods_info_wrap{
flex:3;
display: flex;
flex-direction: column;

}
.goods_name{
  margin-top: 20rpx;
  padding-top: 10rpx;
}
.goods_autor{
  margin: 30rpx 0;
  color: rgb(9, 92, 139);
}
.goods_introduce{
  
  display:-webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}