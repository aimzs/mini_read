/* pages/user/user.wxss */

page{
  background-color: #edece8;
}
.user_info_wrap {
  height: 45vh;
  overflow: hidden;
  position: relative;

}

.user_img_wrap {
  position: relative;

}

.user_bg {
  height: 45vh;
  width: 100%;
  filter: blur(7px);
}
.user_name{
 
  font-weight: 80rpx;
}

.user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
  text-align: center;
}

.user_info .user_icon {
  width: 75%;
  margin-bottom: 50rpx;
  border-radius: 50%;
}

.user_button {
  position: absolute;

  left: 50%;
  transform: translateX(-50%);
  top: 40%;
}
/* 下方显示 */
.user_content{
position: relative;

}
.user_content .user_main{
position: absolute;
width: 90%;
left:50%;
transform: translateX(-50%);
top:-60rpx;
margin-bottom: 30rpx ;
}

.wrap{
  background-color: #fff;
  display: flex;
}
.wrap navigator{
  flex:1;
  text-align: center;
  padding: 10rpx 0;
}
.hisname{
  margin-top:10rpx ;
}
.hisicon{
  font-size: 40rpx;
}
.wrap_item{
  margin-top: 60rpx;
  width: 100%;
 
 
}
.wrap_item .item{
  margin-top:15rpx ;
  border-radius: 35rpx;
  background-color: #fff;
  font-weight: 520;
  padding-top: 40rpx;
  padding-left: 20rpx;
  font-size: 36rpx;
  height: 130rpx;
  font-family: Arial, Helvetica, sans-serif;
  justify-content: center;
  
}

.item .icon{
  float: right;
}
.m_item1{
  
  text-align: center;
  font-size: 35rpx;
  height: 70rpx;
  color: #0c0a0ab0;
  border-bottom:1rpx dotted #d65129 ;
  
}
.m_item2{
  display: flex;
  justify-content: center;
  padding-top: 50rpx;
  padding-left: 23rpx;
  padding-bottom: 20rpx;
}
.m_item2 image{
  flex: 1;
  border-radius: 30rpx;
  width: 60rpx;
  margin-right: 20rpx;

}

.middle{
  margin-top: 30rpx;
  padding-top: 20rpx;
  width: 100%;
  height: 400rpx;
  border-radius: 30px;
  background-color: #fff;
}