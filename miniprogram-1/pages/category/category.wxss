page{
  
  margin-bottom:60rpx;
}
.cates {
  height: 100%;
}
.title{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 70rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  border-bottom: 5rpx solid rgba(247, 94, 67, 0.8);
 
}
.title .title_item{
  flex: 1;
  height: 100%;
  text-align: center;
  font-size: 40rpx;
 
}
.active{
  color:#fff;
  background-color: rgb(255, 115, 0);
}

.cata_item{
  display: flex;

  border-radius: 50rpx;
  background-color:#eef0f4;
 margin-top: 30rpx;
 margin-left: 15rpx;
 margin-right: 15rpx;
}
.cata_item .left{
  flex:5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 35rpx;
}
.left_title{
 font-size: 50rpx;
 margin-bottom:15rpx;
 color: rgb(245, 77, 16);
}
.left_rank{
  margin-bottom: 5rpx;
  color:#1a1919;
}
.cata_item image{
  width: 100%;
  flex: 2;

  border-radius: 15rpx;
}


